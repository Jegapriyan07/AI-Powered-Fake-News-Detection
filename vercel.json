{
    "version": 2,
    "builds": [
        {
            "src": "./backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "./frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/analyze",
            "dest": "/backend/app.py"
        },
        {
            "src": "/bias",
            "dest": "/backend/app.py"
        },
        {
            "src": "/sources",
            "dest": "/backend/app.py"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}